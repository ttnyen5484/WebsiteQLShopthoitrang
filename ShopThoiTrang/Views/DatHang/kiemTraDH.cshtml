
@{
    ViewBag.Title = "kiemTraDH";
    Layout = "~/Views/Shared/ShopThoiTrang.cshtml";
    KHACHHANG a = ViewBag.k;

}
@using ShopThoiTrang.Models;
@model GioHang

<h2 style="margin-left:480px">Thông tin đặt hàng</h2>
<div class="container" style="margin-left:400px">
    <form action="/DatHang/XacNhanDonHang" method="POST">
        <table style="display:inline;" class="text-left">
            <tr><td>&nbsp;</td><td></td></tr>
            <tr>
                <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b style="font-weight:bold;">Họ tên:</b> @a.TENKH</td>
                <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b style="font-weight:bold;">Điện thoại:</b> @a.SDT</td>
            </tr>
            <tr>
                <td class="text-left">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b style="font-weight:bold;">Địa chỉ:</b> @a.DIACHI</td>
                <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b style="font-weight:bold;">Ngày đặt:</b> @DateTime.Now.ToShortDateString()</td>
            </tr>
            <tr><td>&nbsp;</td><td></td></tr>
            <tr>
                <td colspan="2" class="text-center">
                    <table class="table" style="display:inline;">
                        <tr>
                            <td colspan="4" class="text-danger" style="font-weight:bold; font-size:20px;">Thông tin đơn hàng</td>
                        </tr>
                        <tr>
                            <td><b style="font-weight:bold;">Mã sản phẩm</b></td>
                            <td><b style="font-weight:bold;">Tên sản phẩm</b></td>
                            <td><b style="font-weight:bold;">Số lượng</b></td>
                            <td><b style="font-weight:bold;">Đơn giá</b></td>
                        </tr>
                        @foreach (CartItem item in Model.dssp)
                        {
                            <tr>
                                <td>@item.iMaSP</td>
                                <td>@item.iTenSp</td>
                                <td>@item.isoluong</td>
                                <td>@item.iDonGia</td>
                            </tr>
                        }
                    </table>
                </td>
            </tr>
            <tr style="border-top:1px solid black;"><td>&nbsp;</td><td></td></tr>
            <tr>
                <td class="text-center">
                    <b>Tổng số lượng: @ViewBag.tsl</b>
                </td>
                <td class="text-center">
                    <b>Tổng tiền: @ViewBag.ttt ₫</b>
                </td>
            </tr>
            <tr><td>&nbsp;</td><td></td></tr>
            <tr>
                <td style="font-weight:bold; text-align:right;">
                    <b>Ghi chú:</b>
                </td>
                <td>
                    <input type="text" name="txtGhiChu" style="width:283px; height:50px; border:2px solid black;
                        border-radius:15px;" />
                </td>
            </tr>
            <tr><td>&nbsp;</td><td></td></tr>
            <tr>
                <td colspan="2">
                    <input class="btn btn-dark" , style="width:100%; height:50px; font-size:25px;" } type="submit"
                           value="Đặt Hàng" />
                </td>
            </tr>
        </table>
    </form>
    <br />
    <br />
</div>

